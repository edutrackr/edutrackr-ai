{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Web API (dev)",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py",
                "--dev",
                "--watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Web API (dev) - Virtual Environment",
            "type": "shell",
            "command": ".venv\\Scripts\\python.exe",
            "args": [
                "main.py",
                "--dev",
                "--watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
